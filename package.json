{
  "name": "figma-jb-variables-utilities",
  "version": "0.1.0",
  "private": true,
  "description": "Internal Figma plugin: tools launcher + token tools",
  "scripts": {
    "build": "node scripts/sync-figma-menu.cjs && node scripts/generate-custom-icons.cjs && build-figma-plugin --typecheck",
    "watch": "node scripts/sync-figma-menu.cjs && node scripts/generate-custom-icons.cjs --watch & build-figma-plugin --typecheck --watch",
    "preview": "vite",
    "preview:build": "vite build",
    "preview:serve": "vite preview",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "dependencies": {
    "@create-figma-plugin/ui": "^4.0.3",
    "@create-figma-plugin/utilities": "^4.0.3",
    "preact": "^10.26.4"
  },
  "devDependencies": {
    "@create-figma-plugin/build": "^4.0.3",
    "@create-figma-plugin/tsconfig": "^4.0.3",
    "@figma/plugin-typings": "*",
    "@preact/preset-vite": "^2.10.1",
    "@types/node": "^22.13.10",
    "esbuild": "^0.25.3",
    "typescript": "^5.3.2",
    "vite": "^6.1.0",
    "vitest": "^4.0.18"
  },
  "figma-plugin": {
    "id": "1598773743246786962",
    "name": "Int UI Design Tools",
    "editorType": [
      "figma"
    ],
    "networkAccess": {
      "allowedDomains": [
        "none"
      ]
    },
    "documentAccess": "dynamic-page",
    "permissions": [
      "teamlibrary"
    ],
    "menu": [
      {
        "name": "All Tools",
        "main": "src/home/main.ts",
        "ui": "src/home/ui.tsx"
      },
      {
        "name": "Migrate to Islands UI Kit",
        "main": "src/tools/migrate-to-islands-uikit-tool/main.ts",
        "ui": "src/home/ui.tsx"
      },
      {
        "name": "View Colors Chain",
        "main": "src/tools/color-chain-tool/main.ts",
        "ui": "src/home/ui.tsx"
      },
      {
        "name": "Find Color Match in Islands UI Kit",
        "main": "src/tools/find-color-match-tool/main.ts",
        "ui": "src/home/ui.tsx"
      },
      {
        "name": "Mockup Markup Quick Apply",
        "main": "src/tools/mockup-markup-quick-apply-tool/main.ts",
        "ui": "src/home/ui.tsx"
      },
      {
        "name": "Automations",
        "main": "src/tools/automations-tool/main.ts",
        "ui": "src/home/ui.tsx"
      },
      {
        "name": "Print Color Usages",
        "main": "src/tools/print-color-usages-tool/main.ts",
        "ui": "src/home/ui.tsx"
      },
      {
        "name": "Variables Export Import",
        "main": "src/tools/variables-export-import-tool/main.ts",
        "ui": "src/home/ui.tsx"
      },
      {
        "name": "Rename Variables via JSON",
        "main": "src/tools/variables-rename-tool/main.ts",
        "ui": "src/home/ui.tsx"
      },
      {
        "name": "Variables Create Linked Colors",
        "main": "src/tools/variables-create-linked-colors-tool/main.ts",
        "ui": "src/home/ui.tsx"
      },
      {
        "name": "Variables Replace Usages",
        "main": "src/tools/variables-replace-usages-tool/main.ts",
        "ui": "src/home/ui.tsx"
      },
      {
        "name": "Run Automation",
        "main": "src/tools/automations-tool/run-automation.ts",
        "ui": "src/home/ui.tsx",
        "parameterOnly": false,
        "parameters": [
          {
            "name": "Automation",
            "key": "automation",
            "description": "Choose a saved automation",
            "allowFreeform": false
          }
        ]
      }
    ]
  }
}
